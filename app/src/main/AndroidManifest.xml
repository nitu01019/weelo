<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".WeeloApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Weelo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weelo"
        android:extractNativeLibs="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        tools:targetApi="31">

        <!-- Google Maps API Key - Loaded from local.properties via BuildConfig -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <!-- Enable Places API -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Splash Activity - Entry Point -->
        <activity
            android:name=".presentation.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Weelo.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".presentation.auth.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Main Activity - Home Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Location Input Activity -->
        <activity
            android:name=".LocationInputActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Map Booking Activity -->
        <activity
            android:name=".MapBookingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Truck Types Activity -->
        <activity
            android:name=".TruckTypesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Tractor Machinery Types Activity -->
        <activity
            android:name=".TractorMachineryTypesActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Map Selection Activity -->
        <activity
            android:name=".MapSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Driver Dashboard Activity -->
        <activity
            android:name=".presentation.driver.DriverDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Weelo" />

        <!-- Pricing Activity -->
        <activity
            android:name=".presentation.pricing.PricingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Booking Confirmation Activity -->
        <activity
            android:name=".presentation.booking.BookingConfirmationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Booking Request Activity (Searching/Waiting Screen) -->
        <activity
            android:name=".presentation.booking.BookingRequestActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Booking Tracking Activity -->
        <activity
            android:name=".presentation.booking.BookingTrackingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Confirm Pickup Activity - Rapido Style Pickup Confirmation -->
        <activity
            android:name=".presentation.booking.ConfirmPickupActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Firebase Cloud Messaging Service -->
        <service
            android:name=".data.remote.WeeloFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- FCM Default Notification Channel -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="weelo_booking" />

        <!-- FCM Default Notification Icon -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

    </application>

</manifest>
