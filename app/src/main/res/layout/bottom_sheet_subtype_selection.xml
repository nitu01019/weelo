<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:paddingTop="8dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#CCCCCC"
        android:layout_marginBottom="16dp" />

    <!-- Header with truck type name -->
    <TextView
        android:id="@+id/truckTypeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Truck"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A1A1A"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select size and quantity"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp" />

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:maxHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Subtype chips container -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/subtypeChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="8dp"
                android:paddingBottom="16dp" />

            <!-- Quantity Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <!-- Decrease button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/decreaseButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:textSize="20sp"
                    app:cornerRadius="24dp"
                    app:strokeColor="#CCCCCC"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <!-- Quantity display -->
                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:gravity="center" />

                <!-- Increase button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/increaseButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:textSize="20sp"
                    app:cornerRadius="24dp"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

            <!-- Truck Image (optional) -->
            <ImageView
                android:id="@+id/truckImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:contentDescription="Truck image"
                android:layout_marginBottom="16dp" />

            <!-- Capacity info -->
            <TextView
                android:id="@+id/capacityInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Capacity: Loading..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingBottom="16dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Confirm button at bottom -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirm Selection"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.Button" />

</LinearLayout>
