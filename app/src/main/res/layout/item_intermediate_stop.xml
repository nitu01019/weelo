<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Top Dotted Line -->
    <View
        android:id="@+id/dottedLineTop"
        android:layout_width="2dp"
        android:layout_height="24dp"
        android:background="@drawable/dotted_line"
        android:layout_marginStart="5dp"
        android:visibility="visible" />

    <!-- Stop Location Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp">

        <!-- Stop Number Badge (Black diamond with number) -->
        <androidx.cardview.widget.CardView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="#000000">

            <TextView
                android:id="@+id/stopNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

        <!-- Stop Input -->
        <AutoCompleteTextView
            android:id="@+id/stopLocationInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Add Stop"
            android:textSize="16sp"
            android:textColor="#1A1A1A"
            android:textColorHint="#9E9E9E"
            android:background="@null"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="text"
            android:completionThreshold="1" />

        <!-- Drag Handle Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_marginEnd="8dp"
            android:contentDescription="Reorder" />

        <!-- Remove Button -->
        <ImageView
            android:id="@+id/removeStopButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Remove stop"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>
