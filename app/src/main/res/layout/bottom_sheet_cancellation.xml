<?xml version="1.0" encoding="utf-8"?>
<!-- 
  CancellationBottomSheet Layout
  ==============================
  Two-step cancellation flow:
  1. Select reason (radio buttons)
  2. Confirm with booking summary
  
  EASY UNDERSTANDING: Clean white bottom sheet with clear action buttons
  MODULARITY: Reusable for both SearchingVehiclesDialog and BookingTrackingActivity
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_rounded_bg"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/cancelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <!-- Reason Radio Group -->
    <RadioGroup
        android:id="@+id/reasonRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <RadioButton
            android:id="@+id/reasonFoundAnother"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_found_another"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/reasonPriceTooHigh"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_price_too_high"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/reasonChangeOfPlans"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_change_of_plans"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/reasonWrongLocation"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_wrong_location"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/reasonTakingTooLong"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_taking_too_long"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />

        <RadioButton
            android:id="@+id/reasonOther"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/cancel_reason_other"
            android:textSize="15sp"
            android:textColor="@color/text_secondary"
            android:buttonTint="#3366CC"
            android:paddingStart="8dp" />
    </RadioGroup>

    <!-- Other reason text input (hidden by default) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otherReasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="12dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="#3366CC"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/otherReasonInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us your reason..."
            android:maxLines="3"
            android:inputType="textMultiLine"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"
        android:layout_marginVertical="12dp" />

    <!-- Booking Summary (compact) -->
    <LinearLayout
        android:id="@+id/bookingSummaryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_booking_summary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/text_tertiary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/summaryPickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"
            android:text="ðŸ“ " />

        <TextView
            android:id="@+id/summaryDrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="4dp"
            android:text="ðŸ“Œ " />

        <TextView
            android:id="@+id/summaryVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_tertiary"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/summaryPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Go Back button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/goBackButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel_go_back"
            android:textColor="#3366CC"
            android:textSize="14sp"
            android:layout_marginEnd="12dp"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

        <!-- Confirm Cancel button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel_confirm"
            android:textSize="14sp"
            android:enabled="false"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Loading indicator (shown during cancel API call) -->
    <ProgressBar
        android:id="@+id/cancelProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true" />

</LinearLayout>
