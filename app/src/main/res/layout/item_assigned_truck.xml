<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Driver Profile Photo (circular) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivDriverPhoto"
            android:contentDescription="@string/driver_photo_desc"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Status Icon (overlaid on photo, bottom-right) -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:contentDescription="@string/driver_status_icon_desc"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_truck"
            app:tint="@color/primary_blue"
            app:layout_constraintEnd_toEndOf="@id/ivDriverPhoto"
            app:layout_constraintBottom_toBottomOf="@id/ivDriverPhoto"/>

        <!-- Vehicle Number -->
        <TextView
            android:id="@+id/tvVehicleNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="KA-01-AB-1234"
            app:layout_constraintStart_toEndOf="@id/ivDriverPhoto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"/>

        <!-- Driver Name + Rating Row -->
        <LinearLayout
            android:id="@+id/layoutDriverInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/ivDriverPhoto"
            app:layout_constraintTop_toBottomOf="@id/tvVehicleNumber"
            app:layout_constraintEnd_toStartOf="@id/btnCall">

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Raj Kumar" />

            <!-- Rating Badge -->
            <LinearLayout
                android:id="@+id/layoutRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_pickup_label"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â­"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tvDriverRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    tools:text="4.5" />

            </LinearLayout>

        </LinearLayout>

        <!-- Driver Phone (hidden, used for call intent) -->
        <TextView
            android:id="@+id/tvDriverPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:text="9876543210"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDriverInfo"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutDriverInfo"/>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/success_green"
            android:background="@drawable/bg_pickup_label"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            tools:text="In Transit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- ETA Text -->
        <TextView
            android:id="@+id/tvEta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:drawablePadding="4dp"
            tools:text="ETA: 1h 20m"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <!-- Call Button -->
        <ImageButton
            android:id="@+id/btnCall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_phone"
            android:contentDescription="@string/call_driver"
            app:tint="@color/success_green"
            app:layout_constraintEnd_toStartOf="@id/btnTrack"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <!-- Track Button -->
        <ImageButton
            android:id="@+id/btnTrack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_location"
            android:contentDescription="@string/track_truck"
            app:tint="@color/primary_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
