<?xml version="1.0" encoding="utf-8"?>
<!--
    Truck Subtype Item - Simple layout
    ===================================
    No outer card - just image and quantity selector
    Images already have all info (name, capacity) on them
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subtypeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Truck Image - Already has all info on it -->
    <ImageView
        android:id="@+id/subtypeIcon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_truck_open"
        android:contentDescription="Truck type" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Hidden TextViews for adapter compatibility -->
    <TextView
        android:id="@+id/subtypeName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subtypeCapacity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subtypePrice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:orientation="horizontal" />

    <!-- Quantity Selector -->
    <LinearLayout
        android:id="@+id/quantitySelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_input_field"
        android:paddingHorizontal="6dp"
        android:paddingVertical="6dp">

        <TextView
            android:id="@+id/minusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_round_button_blue"
            android:text="âˆ’"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1A237E" />

        <TextView
            android:id="@+id/plusButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_round_button_blue"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1976D2"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
