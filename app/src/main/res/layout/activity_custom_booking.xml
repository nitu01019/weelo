<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FF5722"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/backButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_back"
                        android:padding="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Custom Booking"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Long-term truck contracts"
                    android:textSize="13sp"
                    android:textColor="#FFFFFF99"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Route Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route Details"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/pickupCityInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_form_field"
                    android:hint="Where you need your vehicle?"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/pickupStateInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_form_field"
                    android:hint="Pickup State (Optional)"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Vehicle Requirements Section - NEW DESIGN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Truck Types"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap a truck to select subtypes and quantity"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="12dp" />

                <!-- Truck Types Grid (3 columns) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/truckTypesGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Selected Summary (shown when trucks selected) -->
                <LinearLayout
                    android:id="@+id/selectedSummaryContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_selected_summary"
                    android:padding="12dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected Trucks"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/selectedSummaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:id="@+id/totalTrucksText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: 0 trucks"
                        android:textSize="14sp"
                        android:textColor="#FF5722"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Duration Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/startDatePicker"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_form_field"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Select Date"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Date"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/endDatePicker"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_form_field"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="16dp"
                            android:text="Select Date"
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>

                <CheckBox
                    android:id="@+id/flexibleDatesCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dates are flexible"
                    android:textSize="13sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Additional Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Details"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/goodsTypeInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_form_field"
                    android:hint="Type of Goods (e.g., FMCG, Cement)"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/weightInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_form_field"
                    android:hint="Estimated Weight per Truck"
                    android:paddingHorizontal="16dp"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/specialRequestsInput"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_form_field"
                    android:hint="Special Requests (Optional)"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:textSize="14sp"
                    android:inputType="textMultiLine"
                    android:gravity="top" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#FF5722"
            app:cardElevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Request"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
