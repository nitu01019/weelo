<?xml version="1.0" encoding="utf-8"?>
<!--
SKELETON BOOKING CARD â€” Shimmer loading placeholder for My Trips
MODULARITY: Reusable skeleton component matching item_my_booking.xml layout
CODING STANDARDS: Uses existing skeleton_rectangle/circle drawables
-->
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1000"
    app:shimmer_base_alpha="0.85"
    app:shimmer_highlight_alpha="1.0">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row 1: Booking ID + Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="60dp"
                    android:layout_height="14dp"
                    android:background="@drawable/skeleton_rectangle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="14dp"
                    android:background="@drawable/skeleton_rectangle" />
            </LinearLayout>

            <!-- Row 2: Route -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/skeleton_rectangle" />

            <View
                android:layout_width="200dp"
                android:layout_height="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/skeleton_rectangle" />

            <!-- Row 3: Vehicle + Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <View
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:background="@drawable/skeleton_rectangle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:background="@drawable/skeleton_rectangle" />
            </LinearLayout>

            <!-- Row 4: Date + Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="80dp"
                    android:layout_height="12dp"
                    android:background="@drawable/skeleton_rectangle" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    android:background="@drawable/skeleton_rectangle" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</com.facebook.shimmer.ShimmerFrameLayout>
