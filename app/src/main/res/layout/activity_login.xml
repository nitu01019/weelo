<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- ========================================================================
         PHONE INPUT SECTION - Shows Weelo banner and phone number input
         ======================================================================== -->
    <LinearLayout
        android:id="@+id/phoneInputSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Blue Header with Banner -->
        <FrameLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4">

            <!-- Full Banner Image (Weelo logo + vehicles) -->
            <ImageView
                android:id="@+id/ivHeaderBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_header_banner"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Weelo Banner"/>

            <!-- Help Button (Top Right) -->
            <LinearLayout
                android:id="@+id/btnHelpPhone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_help_button_outline"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="14dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_help_outline"
                    android:contentDescription="Help"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Help"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"/>

            </LinearLayout>

        </FrameLayout>

        <!-- White Card Section - moved up to overlap more on image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:layout_marginTop="-40dp"
            android:background="@drawable/bg_white_card_top_rounded"
            android:orientation="vertical"
            android:paddingTop="28dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your number?"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"/>

            <!-- Phone Input Field -->
            <LinearLayout
                android:id="@+id/phoneInputContainer"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_phone_input_rounded"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="0000000000"
                    android:textColorHint="#BDBDBD"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!-- T&C Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="By continuing, you agree to the T&amp;C and Privacy Policy"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"/>

            <!-- Next Button with Loading -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <!-- IMPORTANT: app:backgroundTint="@null" disables Material tint so custom background works -->
                <Button
                    android:id="@+id/btnSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_next_button_disabled"
                    app:backgroundTint="@null"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"/>

                <ProgressBar
                    android:id="@+id/progressSendOtp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/black"
                    android:visibility="gone"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ========================================================================
         OTP VERIFICATION SECTION - Clean white screen for OTP entry
         ======================================================================== -->
    <ScrollView
        android:id="@+id/otpSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar: Back + Title + Help -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBackToPhone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

                <!-- Title -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Verify OTP"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <!-- Help Button -->
                <LinearLayout
                    android:id="@+id/btnHelpOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_help_button_outline"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="14dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_help_outline"
                        android:contentDescription="Help"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Help"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- Enter verification code -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter verification code"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <!-- Sent to phone number -->
                <TextView
                    android:id="@+id/tvOtpSentTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sent to 0000000000"
                    android:textSize="15sp"
                    android:textColor="@color/text_secondary"/>

                <!-- OTP Input Boxes - 6 boxes that fit screen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etOtp1"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/etOtp2"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/etOtp3"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/etOtp4"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/etOtp5"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionNext"/>

                    <EditText
                        android:id="@+id/etOtp6"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_otp_box_square"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:imeOptions="actionDone"/>

                </LinearLayout>

                <!-- Resend Button with SMS icon -->
                <LinearLayout
                    android:id="@+id/resendContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_resend_button"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sms_outline"
                        android:contentDescription="SMS"/>

                    <TextView
                        android:id="@+id/tvResendOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Resend in 30s"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>

                </LinearLayout>

                <!-- Dev Mode OTP Hint -->
                <TextView
                    android:id="@+id/tvOtpHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Dev Mode: Use OTP 123456"
                    android:textColor="@color/warning_orange"
                    android:textSize="12sp"
                    android:visibility="gone"/>

                <!-- Spacer -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- T&C Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="By continuing, you agree to receive OTP and important communications such as booking updates via SMS."
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"/>

                <!-- Verify Button with Loading -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <!-- IMPORTANT: app:backgroundTint="@null" disables Material tint so custom background works -->
                    <Button
                        android:id="@+id/btnVerifyOtp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_next_button_disabled"
                        app:backgroundTint="@null"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:stateListAnimator="@null"
                        android:elevation="0dp"/>

                    <ProgressBar
                        android:id="@+id/progressVerifyOtp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/black"
                        android:visibility="gone"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
