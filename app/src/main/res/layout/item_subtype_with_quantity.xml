<?xml version="1.0" encoding="utf-8"?>
<!--
    Subtype Item - Simple layout
    ============================
    No outer card - just image and quantity selector
    Images already have all info on them
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subtypeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Truck Image - Already has all info on it -->
    <ImageView
        android:id="@+id/subtypeImage"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_container_main"
        android:contentDescription="Truck type" />

    <!-- Spacer -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Hidden TextViews for adapter compatibility -->
    <TextView
        android:id="@+id/subtypeName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/subtypeCapacity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Quantity Selector -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_quantity_selector_rounded"
        android:padding="4dp">

        <TextView
            android:id="@+id/btnDecrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="âˆ’"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#757575"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center" />

        <TextView
            android:id="@+id/btnIncrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="+"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
