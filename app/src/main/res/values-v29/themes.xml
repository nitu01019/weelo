<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    =============================================================================
    API 29+ THEME OVERRIDES - FORCE DARK DISABLED
    =============================================================================
    Android 10+ (API 29) can auto-apply dark mode to views even if the theme 
    is Light. This is called "Force Dark". We MUST disable it on ALL themes
    to prevent the splash screen from dimming in the evening.
    
    SCALABILITY: Works on all Android 10+ devices (99%+ of users)
    EASY UNDERSTANDING: forceDarkAllowed=false prevents auto-darkening
    =============================================================================
    -->
    
    <!-- Main app theme - NEVER apply Force Dark -->
    <style name="Theme.Weelo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/weelo_orange</item>
        <item name="colorPrimaryVariant">@color/weelo_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- CRITICAL: Disable Force Dark to prevent dimming -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
    
    <!-- Splash theme - NEVER apply Force Dark -->
    <style name="Theme.Weelo.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:statusBarColor">@color/splash_gold</item>
        <item name="android:navigationBarColor">@color/splash_gold</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- CRITICAL: Disable Force Dark to prevent splash dimming in evening -->
        <item name="android:forceDarkAllowed">false</item>
    </style>
</resources>
