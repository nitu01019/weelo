<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme for Weelo -->
    <style name="Theme.Weelo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (orange stays same in dark) -->
        <item name="colorPrimary">@color/weelo_orange</item>
        <item name="colorPrimaryVariant">@color/weelo_orange_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status bar (dark) -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    
    <!-- Dark Splash Theme -->
    <style name="Theme.Weelo.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- Dark Transparent Dialog Theme -->
    <style name="Theme.Weelo.Dialog.Transparent" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    
    <!-- Dark Bottom Sheet Dialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle.Dark</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>
    
    <!-- Dark Bottom Sheet Style -->
    <style name="BottomSheetStyle.Dark" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@color/dark_surface</item>
        <item name="behavior_peekHeight">auto</item>
        <item name="behavior_fitToContents">false</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_hideable">true</item>
        <item name="shapeAppearance">@style/BottomSheetShapeAppearance</item>
    </style>
    
    <!-- OTP Input Style Dark -->
    <style name="OtpInputStyle">
        <item name="android:background">@drawable/bg_otp_input</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
